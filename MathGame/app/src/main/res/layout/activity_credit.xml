<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment">

    <!-- This code is for the app to display the  word "Credits" -->
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Credits"
        android:textSize="30dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- This code is for the app to display a horizontal line -->  
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#444"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="80dp"
        tools:ignore="MissingConstraints"></TableRow>


    <!-- This code is for the app to display the  word "Developers" -->
    <TextView
        android:id="@+id/textview_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Developers:"
        android:layout_marginTop="150dp"
        android:textSize="23dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- This code is for the app to display the image-->
    <ImageView
        android:layout_width="230dp"
        android:layout_height="237dp"
        android:src="@drawable/logo"
        tools:layout_editor_absoluteX="90dp"
        tools:layout_editor_absoluteY="455dp" />

    <!-- This code is for the app to display the  word "Gavin Davy" -->
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gavin Davy"
        android:textSize="25dp"
        tools:layout_editor_absoluteX="130dp"
        tools:layout_editor_absoluteY="225dp" />

    <!-- This code is for the app to display the  word "Michael Erickson" -->
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Michael Erickson"
        android:textSize="25dp"
        tools:layout_editor_absoluteX="130dp"
        tools:layout_editor_absoluteY="296dp" />
    
    <!-- This code is for the app to display the  word "Rena Sakai" -->
    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rena Sakai"
        android:textSize="25dp"
        tools:layout_editor_absoluteX="130dp"
        tools:layout_editor_absoluteY="366dp" />


</androidx.constraintlayout.widget.ConstraintLayout>
